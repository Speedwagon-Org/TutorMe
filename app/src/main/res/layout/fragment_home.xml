<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home_main"
    android:background="@drawable/background_profile_color">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/Homepage"
            android:layout_width="380dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@drawable/border"
            android:hint="search..."
            android:paddingVertical="6dp"
            android:paddingLeft="23dp"
            android:textSize="23dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/Populer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:layout_marginLeft="12dp"
        android:text="Populer"
        android:textColor="@color/black"
        android:textSize="32dp" />


    <ImageView
        android:id="@+id/home"
        android:layout_width="103dp"
        android:layout_height="78dp"
        android:layout_below="@+id/tvPopuler"
        android:background="@drawable/poni"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="9dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/Ketnama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="-83dp"
        android:layout_toRightOf="@id/home"
        android:text="Nama Akun"
        android:textColor="@color/blue"
        android:textSize="18dp"
        tools:ignore="UsingOnClickInXml" />

    <TextView
        android:id="@+id/Ketnamaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/home"
        android:text="nama id @"
        android:textColor="@color/black"
        android:textSize="18dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="23dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <TextView
            android:id="@+id/tvPopulerKetnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Bagaimana Cara Mengatasi Message: FPDF error: Unsupported image type: jpg' di (Codeigniter)"
            android:textColor="@color/black"
            android:textSize="25sp" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="horizontal" >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/_40sdp"
            android:background="@drawable/ic_comment" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="@dimen/_40sdp"
        android:background="@drawable/ic_reply" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="@dimen/_40sdp"
        android:background="@drawable/ic_favorite" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="@dimen/_40sdp"
        android:background="@drawable/ic_baseline_share_24" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/Rekomendasi"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/_10sdp" >

            <TextView
                android:id="@+id/tvPopuler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:layout_marginLeft="12dp"
                android:text="Rekomendasi"
                android:textColor="@color/black"
                android:textSize="32dp" />


            <ImageView
                android:id="@+id/igvPopuler"
                android:layout_width="103dp"
                android:layout_height="78dp"
                android:layout_below="@+id/tvPopuler"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:scaleType="fitXY"
                android:src="@drawable/ani" />

            <TextView
                android:id="@+id/NamaAkun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/igvPopuler"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="-83dp"
                android:layout_toRightOf="@id/igvPopuler"
                android:text="Nama Akun"
                android:textColor="@color/blue"
                android:textSize="18dp"
                tools:ignore="UsingOnClickInXml" />

            <TextView
                android:id="@+id/tvPopulerKetnamaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPopuler"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="38dp"
                android:layout_toRightOf="@id/igvPopuler"
                android:text="nama id @"
                android:textColor="@color/black"
                android:textSize="18dp" />

        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <TextView
            android:id="@+id/deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Mohon pencerahan kode penutup php(?> kok ada stlh tanda siku {"
            android:textColor="@color/black"
            android:textSize="28sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/_40sdp"
            android:background="@drawable/ic_comment" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/_40sdp"
            android:background="@drawable/ic_reply" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/_40sdp"
            android:background="@drawable/ic_favorite_border" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/_40sdp"
            android:background="@drawable/ic_baseline_share_24" />

    </LinearLayout>


</LinearLayout>