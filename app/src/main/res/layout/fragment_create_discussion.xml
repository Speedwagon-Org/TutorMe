<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <ImageButton
            android:onClick="onClickIbtnCari"
            android:id="@+id/ibtnCari"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:elevation="40dp"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/ibtnFilter"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ibtnCari"
            android:background="#00000000"
            android:elevation="40dp"
            android:onClick="onClickIbtnFilter"
            android:scaleType="centerInside"
            tools:ignore="UsingOnClickInXml" />

        <TextView
            android:id="@+id/tvPopuler"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginVertical="12dp"
            android:layout_marginLeft="0dp"
            android:text="Create Discussion"
            android:textColor="@color/black"
            android:textSize="39dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/igvPopuler"
            android:layout_width="103dp"
            android:layout_height="78dp"
            android:layout_below="@+id/tvPopuler"
            android:scaleType="fitXY" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Discussion" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


</LinearLayout>

